
@{
    ViewBag.Title = "Main";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <style>
        body {
            background-image: url("../../img/Input_profile_background.jpg");
            background-size: cover;
            display: flex;
            flex-direction: column;
            height: 100%;
        }

        .body-content {
            flex: 1 0 auto;
        }

        .footer {
            flex: 0 0 auto;
        }

        .navigation-bar.w-nav {
            flex: 0 0 auto;
            background-color: white;
            margin-top: -50px;
        }

    </style>
}
<div style="height:100px;width:100%">
    <p></p>
</div>
<div style="float:left; width:18%; height:450px; padding-top:2em; border:1px solid black; background-color:white">
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link text-center" href="~/UserDetails/Index" style="font-size:20px; color:dodgerblue">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-center" href="~/FamilyMembers/Index" style="font-size:20px; color:dodgerblue">FamilyMembers</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="~/Prediction/Create">Predict</a>
        </li>
    </ul>
</div>
<div style="float:left; width:5%">
    <p></p>
</div>
<div style="float:left; width:75%; height:100%; padding-left:5em; border:1px solid black; background-color:white; display:inherit">
    @RenderBody()
</div>
@RenderSection("scripts", required: false)