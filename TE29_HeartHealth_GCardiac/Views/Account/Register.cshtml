@model TE29_HeartHealth_GCardiac.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="row">
    <h2 class="text-center">G'Cardiac</h2>
</div>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <h4 class="text-center">Create a new account.</h4>
    </div>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row text-center">
        @Html.LabelFor(m => m.Email, new { @class = "control-label", style = "margin-left:-110px" })
    </div>
    <div class="row">
        @Html.TextBoxFor(m => m.Email, new { @class = "center-block", style = "200px" })
    </div>
    <div class="row" style="margin-top:10px">
        <input type="submit" class="btn btn-default center-block" value="Register" />
    </div>
    <div class="row">
        <p class="text-center">
            @Html.ActionLink("Already have one? Log in now!", "Login")
        </p>
    </div>
